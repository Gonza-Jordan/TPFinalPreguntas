<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel de Administrador</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/TPFinalPreguntas/public/css/header.css">
    <link rel="stylesheet" href="/TPFinalPreguntas/public/css/footer.css">
    <link rel="stylesheet" href="/TPFinalPreguntas/public/css/administrador.css">
</head>

<body>
<main class="admin-view">
    {{> header}}
    <h1>Panel Administrativo</h1>

    <div class="stats">
        <h2>Estadísticas Generales</h2>
        <form method="post" action="/TPFinalPreguntas/admin/dashboard">
            <label for="filtro_tiempo">Filtrar por:</label>
            <select id="filtro_tiempo" name="filtro_tiempo">
                {{#filtros}}
                    <option value="{{valor}}" {{#seleccionado}}selected{{/seleccionado}}>{{nombre}}</option>
                {{/filtros}}
            </select>
            <button type="submit">Aplicar</button>
        </form>
    </div>

    <h2>Estadísticas Generales</h2>
    <ul>
        <li>Total de jugadores: {{cantidad_usuarios}}</li>
        <li>Partidas jugadas: {{cantidad_partidas}}</li>
        <li>Preguntas disponibles: {{cantidad_preguntas}}</li>
    </ul>

    <h2>Usuarios por País</h2>
    <canvas id="usuariosPorPais" width="400" height="400"></canvas>

    <h2>Usuarios por Sexo</h2>
    <canvas id="usuariosPorSexo" width="400" height="400"></canvas>

    <button onclick="window.print()">Imprimir Reporte</button>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>

    const cantidadUsuarios = {{cantidad_usuarios}};
    const cantidadPartidas = {{cantidad_partidas}};
    const cantidadPreguntas = {{cantidad_preguntas}};

    const usuariosPorPais = {
        labels: ['Argentina', 'Brasil', 'Chile'],
        datos: [40, 35, 25]
    };

    const usuariosPorSexo = {
        labels: ['Hombres', 'Mujeres', 'No Binarios'],
        datos: [60, 35, 5]
    };

    const ctxPais = document.getElementById('usuariosPorPais').getContext('2d');
    new Chart(ctxPais, {
        type: 'pie',
        data: {
            labels: usuariosPorPais.labels,
            datasets: [{
                data: usuariosPorPais.datos,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.5)',
                    'rgba(54, 162, 235, 0.5)',
                    'rgba(255, 206, 86, 0.5)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)'
                ],
                borderWidth: 1
            }]
        }
    });

    const ctxSexo = document.getElementById('usuariosPorSexo').getContext('2d');
    new Chart(ctxSexo, {
        type: 'pie',
        data: {
            labels: usuariosPorSexo.labels,
            datasets: [{
                data: usuariosPorSexo.datos,
                backgroundColor: [
                    'rgba(75, 192, 192, 0.5)',
                    'rgba(153, 102, 255, 0.5)',
                    'rgba(255, 159, 64, 0.5)'
                ],
                borderColor: [
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        }
    });
</script>
</body>

</html>
