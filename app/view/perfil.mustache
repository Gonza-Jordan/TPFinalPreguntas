<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="public/css/perfil-perfilJugador.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> <!-- Para mostrar popups con SweetAlert -->
</head>
<body>
<div class="perfil">
    <header>
        <a class="back-button" href="home">⟵</a>
        <h1>{{nombre_usuario}}</h1>
        <p class="tipo-usuario"><strong>Tipo de usuario:</strong> {{tipo_usuario}}</p>
        <div class="icons">
            <button class="qr-button">QR</button>
            <button class="edit-button">✏️</button>
        </div>
    </header>

    <div class="imagen-perfil">
        <img id="foto-perfil" src="public/perfiles/{{foto_perfil}}" alt="Foto de perfil" class="foto-perfil">
    </div>

    <div class="cambiar-imagen">
        <form id="cambiar-foto-form" method="POST" enctype="multipart/form-data">
            <label for="nueva_foto">Cambiar foto de perfil:</label>
            <input type="file" id="nueva_foto" name="nueva_foto" accept="image/*">
            <button type="submit" class="btn btn-primary">Subir nueva foto</button>
        </form>
    </div>

    <form>
        <label for="fecha-nacimiento">Fecha de nacimiento</label>
        <input type="date" id="fecha-nacimiento" name="fechaNacimiento" value="{{anio_nacimiento_formateado}}">

        <label for="sexo">Sexo</label>
        <select id="sexo" name="sexo">
            <option value="M" {{#is_masculino}}selected{{/is_masculino}}>Masculino</option>
            <option value="F" {{#is_femenino}}selected{{/is_femenino}}>Femenino</option>
            <option value="O" {{#is_otro}}selected{{/is_otro}}>Otro</option>
        </select>

        <label for="ubicacion">Ubicación</label>
        <textarea id="ubicacion" name="ubicacion">{{pais}}, {{ciudad}}</textarea>

        <label for="email">Correo electrónico</label>
        <input type="email" id="email" name="email" value="{{email}}">

        <label for="password">Contraseña</label>
        <input type="password" id="password" name="password" value="{{contrasena}}">

        <label for="repassword">Repetir contraseña</label>
        <input type="password" id="repassword" name="repassword" value="{{contrasena}}">
    </form>

    <a href="logIn.mustache">
        <button class="logout-button">Cerrar sesión</button>
    </a>

    <!-- Panel de administrador -->
    {{#is_admin}}
        <a href="administrador.mustache">
            <div class="admin-panel">
                <button class="admin-button">Panel de administrador</button>
            </div>
        </a>
    {{/is_admin}}

    <!-- Panel de editor -->
    {{#is_editor}}
        <a href="editor.mustache">
            <div class="admin-panel">
                <button class="admin-button">Panel de editor</button>
            </div>
        </a>
    {{/is_editor}}
</div>

<script>
    document.getElementById("cambiar-foto-form").addEventListener("submit", function(event) {
        event.preventDefault(); // Prevenir que el formulario se envíe de manera tradicional

        let formData = new FormData(this);
        let xhr = new XMLHttpRequest();

        xhr.open("POST", "index.php?page=actualizarFoto", true);
        xhr.onreadystatechange = function() {
            if (xhr.readyState === 4 && xhr.status === 200) {
                Swal.fire({
                    title: 'Éxito',
                    text: 'Foto de perfil actualizada exitosamente.',
                    icon: 'success',
                    confirmButtonText: 'OK'
                });

                let nuevaImagen = URL.createObjectURL(document.getElementById('nueva_foto').files[0]);
                document.getElementById('foto-perfil').src = nuevaImagen;
            }
        };
        xhr.send(formData);
    });
</script>

</body>
</html>
