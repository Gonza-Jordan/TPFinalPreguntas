<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel de Editor</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
        }

        .editor-view {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 1000px;
            width: 100%;
        }

        h1, h2, h3 {
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        table, th, td {
            border: 1px solid #dee2e6;
        }

        th, td {
            padding: 10px;
            text-align: center;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        button {
            padding: 10px 15px;
            margin: 5px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .modificar-btn {
            background-color: #ffc107;
            color: white;
        }

        .eliminar-btn {
            background-color: #dc3545;
            color: white;
        }

        .aprobar-btn {
            background-color: #28a745;
            color: white;
        }

        #nueva-pregunta-btn {
            display: block;
            margin: 0 auto 30px;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        #nueva-pregunta-btn:hover {
            background-color: #0056b3;
        }

        button:hover {
            opacity: 0.8;
        }
    </style>
</head>

<body>
<main class="editor-view">
    <h1>Bienvenido, {{nombreEditor}}</h1>
    <h2>Gestión de Preguntas</h2>

    <button id="nueva-pregunta-btn">Crear nueva pregunta</button>

    <h3>Preguntas Existentes</h3>
    <table>
        <thead>
        <tr>
            <th>ID Pregunta</th>
            <th>Pregunta</th>
            <th>Acción</th>
        </tr>
        </thead>
        <tbody>
        {{#preguntasExistentes}}
            <tr>
                <td>{{idPregunta}}</td>
                <td>{{textoPregunta}}</td>
                <td>
                    <button class="modificar-btn" data-id="{{idPregunta}}">Modificar</button>
                    <button class="eliminar-btn" data-id="{{idPregunta}}">Eliminar</button>
                </td>
            </tr>
        {{/preguntasExistentes}}
        </tbody>
    </table>

    <h3>Preguntas Reportadas</h3>
    <table>
        <thead>
        <tr>
            <th>ID Pregunta</th>
            <th>Pregunta</th>
            <th>Acción</th>
        </tr>
        </thead>
        <tbody>
        {{#preguntasReportadas}}
            <tr>
                <td>{{idPregunta}}</td>
                <td>{{textoPregunta}}</td>
                <td>
                    <a href="/TPFinalPreguntas/app/index.php?page=editor&action=aprobarReportada&id={{id}}">
                    <button class="aprobar-btn" data-id="{{idPregunta}}">Aprobar</button>
                    </a>
                    <a href="/TPFinalPreguntas/app/index.php?page=editor&action=eliminarPregunta&id={{id}}">
                    <button class="eliminar-btn" data-id="{{idPregunta}}">Dar de baja</button>
                    </a>
                </td>
            </tr>
        {{/preguntasReportadas}}
        </tbody>
    </table>

    <h3>Preguntas Sugeridas por Usuarios</h3>
    <table>
        <thead>
        <tr>
            <th>ID Pregunta</th>
            <th>Pregunta</th>
            <th>Acción</th>
        </tr>
        </thead>
        <tbody>
        {{#preguntasSugeridas}}
            <tr>
                <td>{{idPregunta}}</td>
                <td>{{textoPregunta}}</td>
                <td>
                    <a href="/TPFinalPreguntas/app/index.php?page=editor&action=aprobarSugerida&id={{id}}">
                    <button class="aprobar-btn" data-id="{{idPregunta}}">Aprobar</button>
                    </a>
                    <a href="/TPFinalPreguntas/app/index.php?page=editor&action=rechazarSugerida&id={{id}}">
                    <button class="modificar-btn" data-id="{{idPregunta}}">Modificar</button>
                    </a>

                </td>
            </tr>
        {{/preguntasSugeridas}}
        </tbody>
    </table>
</main>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const botones = document.querySelectorAll('.accion-btn');

        botones.forEach(boton => {
            boton.addEventListener('click', function (event) {
                event.preventDefault();

                const url = this.href;
                const row = this.closest('tr');

                fetch(url, {
                    method: 'GET',
                })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                row.style.backgroundColor = '#d4edda'; // Cambia el color de la fila a verde claro
                                setTimeout(() => row.remove(), 1000); // Remueve la fila tras un segundo
                            } else {
                                alert('Hubo un error al realizar la acción.');
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            alert('Hubo un problema con la solicitud.');
                        });
            });
        });
    });
</script>

</body>

</html>
