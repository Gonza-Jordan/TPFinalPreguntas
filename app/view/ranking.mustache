<div class="container">
    <h2>Ranking General</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Posición</th>
            <th>Nombre de Usuario</th>
            <th>Puntaje Total</th>
        </tr>
        </thead>
        <tbody>
        {{#usuarios}}
            <tr>
                <td>{{posicion}}</td>
                <td>
                    <a href="Ranking/verPerfilJugador?id={{id_usuario}}">
                    {{nombre_usuario}}
                    </a>
                </td>
                <td>{{puntaje_total}}</td>
            </tr>
        {{/usuarios}}
        {{^usuarios}}
            <tr>
                <td colspan="3">No hay usuarios en el ranking.</td>
            </tr>
        {{/usuarios}}
        </tbody>
    </table>
</div>

