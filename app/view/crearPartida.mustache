<!--                <div class="centered-elements">-->
<!--                    <button type="submit" class="btn btn-primary continue-btn">Continuar</button>-->
<!--                    <a href="#" class="report-link">Reportar pregunta</a>-->
<!--                </div>-->

<!--            </form>-->

            <form action="partida/validarRespuesta" method="post">
                {{#pregunta}}

                    <p class="question-title">{{pregunta}}</p>

                    <div class="option-btn">
                        <input type="radio" name="respuesta" id="opcionA" value="A"
                            {{#respuestaSeleccionada}}{{#igual respuestaSeleccionada "A"}}checked{{/igual}}{{/respuestaSeleccionada}}>
                        <label for="opcionA">{{opcionA}}</label>
                    </div>

                    <div class="option-btn">
                        <input type="radio" name="respuesta" id="opcionB" value="B"
                            {{#respuestaSeleccionada}}{{#igual respuestaSeleccionada "B"}}checked{{/igual}}{{/respuestaSeleccionada}}>
                        <label for="opcionB">{{opcionB}}</label>
                    </div>

                    <div class="option-btn">
                        <input type="radio" name="respuesta" id="opcionC" value="C"
                            {{#respuestaSeleccionada}}{{#igual respuestaSeleccionada "C"}}checked{{/igual}}{{/respuestaSeleccionada}}>
                        <label for="opcionC">{{opcionC}}</label>
                    </div>

                    <div class="option-btn">
                        <input type="radio" name="respuesta" id="opcionD" value="D"
                            {{#respuestaSeleccionada}}{{#igual respuestaSeleccionada "D"}}checked{{/igual}}{{/respuestaSeleccionada}}>
                        <label for="opcionD">{{opcionD}}</label>
                    </div>

                    <div class="centered-elements">
                        <button type="submit" class="btn btn-primary continue-btn">Continuar</button>
                        <a href="#" class="report-link">Reportar pregunta</a>
                    </div>

                {{/pregunta}}

                {{#resultado}}
                    <div class="feedback">
                        {{#igual resultado "correcta"}}
                            <p class="text-success">¡Respuesta correcta!</p>
                        {{/igual}}
                        {{#igual resultado "incorrecta"}}
                            <p class="text-danger">Respuesta incorrecta. La correcta era {{pregunta.respuesta_correcta}}</p>
                        {{/igual}}
                    </div>
                {{/resultado}}
            </form>


        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Código JavaScript para manejar la selección de opciones
        document.querySelectorAll('.option-btn').forEach(button => {
            button.addEventListener('click', function() {
                // Remover la clase 'selected' de todos los botones
                document.querySelectorAll('.option-btn').forEach(btn => {
                    btn.classList.remove('selected');
                    btn.classList.remove('btn-primary');
                    btn.classList.add('btn-outline-primary');
                });
                // Añadir la clase 'selected' al botón clickeado
                this.classList.add('selected');
                this.classList.remove('btn-outline-primary');
                this.classList.add('btn-primary');
            });
        });
    </script>
</body>
</html>